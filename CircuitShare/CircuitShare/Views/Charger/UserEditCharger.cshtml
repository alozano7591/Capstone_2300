@model UserChargerViewModel

@{
    ViewData["Title"] = "EditCharger";
}

<h1 class="TitleStyle" style="font-size: 50px; text-decoration: underline">EditCharger</h1>

<div class="road-container">
    <div class="lane"></div>
    <div class="middle-line"></div>
    <div class="lane"></div>
</div>
<div class="row login-form-container formAlign">
    <div class="">
        <form asp-controller="Charger" asp-action="UserEditCharger" asp-route-username="@User.Identity.Name" method="post" enctype="application/x-www-form-urlencoded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ActiveCharger.ChargerId" placeholder="0" />

            <div class="form-group">
                <label asp-for="ActiveCharger.Name" class="control-label"></label>
                <input asp-for="ActiveCharger.Name" class="form-control" />
                <span asp-validation-for="ActiveCharger.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveCharger.Description" class="control-label"></label>
                <input asp-for="ActiveCharger.Description" class="form-control" />
                <span asp-validation-for="ActiveCharger.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActiveCharger.HourlyRate" class="control-label">Hourly Rate</label>
                <input asp-for="ActiveCharger.HourlyRate" class="form-control" placeholder="0" />
                <span asp-validation-for="ActiveCharger.HourlyRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sumbit Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color: snow" asp-controller="Charger" asp-action="GetMyChargersByUsername" asp-route-username="@User.Identity.Name">Back to Charger Manager</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
