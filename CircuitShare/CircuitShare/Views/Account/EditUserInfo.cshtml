@model CircuitShare.Models.UserInfoViewModel
@{
    ViewData["Title"] = "Edit User Info";
}

<h1 class="TitleStyle" style="font-size: 50px; text-decoration: underline">Edit Profile</h1>

<div class="road-container">
    <div class="lane"></div>
    <div class="middle-line"></div>
    <div class="lane"></div>
</div>
@* *@

<!-- Just a start of a form, needs a proper asp-action here -->
<div class="row login-form-container formAlign">
<form asp-controller="Account" asp-action="PostEditUserInfoByUsername" asp-route-username="@User.Identity.Name" method="post" enctype="application/x-www-form-urlencoded">
    <!-- placeholder for validation errs: -->
    <div class="text-danger" asp-validation-summary="All"></div>


    <input hidden class="form-control" type="text" placeholder="Username" asp-for="UserName" />

    <div class="form-group">
        <label class="mt-4">First Name</label>
        <input class="form-control" type="text" placeholder="Enter First Name..." asp-for="FirstName" />
    </div>

    <div class="form-group">
        <label class="mt-4">Last Name</label>
        <input class="form-control" type="text" placeholder="Enter Last Name" asp-for="LastName" />
    </div>

    <div class="form-group">
        <label class="mt-4">Gender</label>
        <select class="form-control" asp-for="GenderType" asp-items="Html.GetEnumSelectList<CircuitShare.Entities.User.Gender>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>

    <div class="form-group">
        <label class="mt-4">Birthday</label>
        <input class="form-control" type="date" value="@(Model.Birthday?.ToString("yyyy-MM-dd"))" asp-for="Birthday" />
    </div>

    <button class="btn btn-primary mt-4" type="submit">Submit</button>
    <a asp-controller="Account" asp-action="GetUserProfile" asp-route-username="@User.Identity.Name" class="btn btn-primary mt-4">Cancel</a>
</form>
</div>